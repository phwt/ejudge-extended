{
  "autorun": false,
  "terminals": [
    {
      "name": "Build and Run current file",
      "description": "Build and Run current C file using GCC",
      "focus": true,
      "cwd": "[fileDirname]",
      "commands": [
        "gcc [fileBasename] -o [fileBasenameNoExtension]",
        ".\\[fileBasenameNoExtension].exe"
      ]
    },
    {
      "name": "Submit to <e>Judge",
      "description": "Submit current problem in <e>Judge",
      "focus": true,
      "onlySingle": true,
      "cwd": "[workspaceFolder]",
      "commands": [
        "Remove-item alias:curl",
        "set /p token=<current_token.txt",
        "curl --cookie ./ejudge_cookie -F 'file=@[file]' -F '_token=%token%' -F 'lang=c' https://ejudge.it.kmitl.ac.th/problem/[fileBasenameNoExtension]/send"
      ]
    },
    {
      "name": "Open in <e>Judge",
      "description": "Open current problem in <e>Judge",
      "focus": true,
      "onlySingle": true,
      "command": "start chrome https://ejudge.it.kmitl.ac.th/problem/[fileBasenameNoExtension]"
    },
    {
      "name": "Executable cleanup",
      "description": "Delete all .exe files in current directory",
      "focus": true,
      "onlySingle": true,
      "cwd": "[fileDirname]",
      "command": "del *.exe"
    }
  ]
}